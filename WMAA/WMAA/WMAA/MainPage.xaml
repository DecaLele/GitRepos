<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WMAA"
             x:Class="WMAA.MainPage">

  <StackLayout Orientation="Vertical">    
    <Image x:Name="Picture" heigthRequest="400" />
    <ActivityIndicator x:Name="Indicator" isVisible ="False" IsRunning="False" />
    <Button x:Name="btnCamera" Clicked="btnCamera_Click" Text="Take" />  
    <Button x:Name="btnGallery" Clicked="btnGallery_Click" Text="Gallery" />
    <Label x:Name="lblStatus" Text="{Binding Path=MessageStatus}" />
  </StackLayout>
</ContentPage>